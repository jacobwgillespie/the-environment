{
  "name": "the-environment",
  "version": "1.0.0",
  "description": "Simple access to environment variables in Node.js",
  "repository": "https://github.com/jacobwgillespie/the-environment.git",
  "homepage": "https://github.com/jacobwgillespie/the-environment",
  "author": "Jacob Gillespie <jacobwgillespie@gmail.com>",
  "license": "MIT",
  "main": "dist/cjs/index.js",
  "module": "dist/es/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "environment",
    "environment-variables",
    "env"
  ],
  "scripts": {
    "build": "rollup -c",
    "clean": "rm -rf coverage dist",
    "format": "prettier --write .",
    "lint": "prettier --check .",
    "prepack": "rm -rf dist && rollup -c",
    "test": "jest --coverage",
    "type-check": "tsc --noEmit",
    "type-check:tests": "tsc -p tsconfig.test.json",
    "watch": "rollup -c -w"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.36",
    "@types/jest": "^27.4.0",
    "@types/node": "^16",
    "dotenv": "^10.0.0",
    "jest": "^27.4.7",
    "node-dev": "^7.1.0",
    "prettier": "^2.4.1",
    "prettier-plugin-organize-imports": "^2.3.4",
    "prettier-plugin-pkg": "^0.11.0",
    "rollup": "^2.63.0",
    "rollup-plugin-dts": "^4.1.0",
    "rollup-plugin-typescript2": "^0.31.1",
    "ts-jest": "^27.1.2",
    "ts-toolbelt": "^9.6.0",
    "typescript": "^4.5.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "sideEffects": false
}
